!!!!!!!!!!!!!!
!!! COLORS !!!
!!!!!!!!!!!!!!

*background: #222222
*foreground: #e6e3c6
! black
*color0: #151515
! bright_black
*color8: #3e3c3a
! red
*color1: #cc3333
! bright_red
*color9: #cc6666
! green
*color2: #81ac2b
! bright_green
*color10: #9dce3b
! yellow
*color3: #cccc33
! bright_yellow
*color11: #ffcf6f
! blue
*color4: #333399
! bright_blue
*color12: #669999
! magenta
*color5: #663399
! bright_magenta
*color13: #666699
! cyan
*color6: #66cc99
! bright_cyan
*color14: #99ffcc
! white
*color7: #e6e3c6
! bright_white
*color15: #EEEEEC


!!!!!!!!!!!!!
!!! FONTS !!!
!!!!!!!!!!!!!

URxvt*font: xft:Monospace:pixelsize=16:antialias=true:hinting=true
!:pixelsize=16:antialias=true:hinting=true
URxvt*boldfont: xft:Monospace:bold:pixelsize=16:antialias=true:hinting=true
!:pixelsize=16:antialias=true:hinting=true
urxvt*letterSpace: -1 ! this can be negative
Rxvt.letterSpace: -1


!!!!!!!!!!!!!!!!!!!!!
!!! BROWSER LINKS !!!
!!!!!!!!!!!!!!!!!!!!!

URxvt.perl-ext-common: default,matcher,tabbedex,vtwheel,clipboard
! tabbed
URxvt.matcher.button: 1
URxvt.perl-ext: default,url-select
URxvt.keysym.M-u: perl:url-select:select_next
    URxvt.url-select.launcher: /usr/bin/chromium-browser
    URxvt.url-select.underline: true
URxvt.urlLauncher : chromium-browser
URxvt.url-select.launcher: chromium-browser

!!!!!!!!!!!!!!!!!!!!!!
!!! GENERAL CONFIG !!!
!!!!!!!!!!!!!!!!!!!!!!

URxvt.insecure: false
urxvt*allow_bold: false


!!!!!!!!!!!!!!!!!!!!!!!!
!!! SCROLLING/CURSOR !!!
!!!!!!!!!!!!!!!!!!!!!!!!

URxvt*saveLines: 300000
URxvt.scrollBar_right: true
URxvt*scrollstyle:plain
URxvt*cursorBlink: true
URxvt*cursorUnderline: false
URxvt*cursorColor: #4e9a06


!!!!!!!!!!!!!!!!!!!!
!!! COPY/PASTING !!!
!!!!!!!!!!!!!!!!!!!!

URxvt.perl-ext-common: selection-to-clipboard


!!!!!!!!!!!!!!!
!!! TABBING !!!
!!!!!!!!!!!!!!!

URxvt.tabbedex.autohide: yes
URxvt.tabbedex.tabbar-fg: 2
URxvt.tabbedex.tabbar-bg: 0
URxvt.tabbedex.tab-fg:    10
URxvt.tabbedex.tab-bg:    0
URxvt.tabbedex.title: yes
URxvt.tabbedex.new-button:  no


!!!!!!!!!!!!!!!!!!!!
!!! TRANSPARENCY !!!
!!!!!!!!!!!!!!!!!!!!

urxvt.transparent: true
!URxvt*tintColor: #222222
URxvt*tintColor: #333333